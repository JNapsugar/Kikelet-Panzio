<Window x:Class="Kikelet_Panzió.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kikelet_Panzió"
        mc:Ignorable="d"
        Title="Kikelet Panzió" Height="350" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="160"></Setter>
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Margin" Value="15"></Setter>
            <Setter Property="FontFamily" Value="Times New Roman"></Setter>
            <Setter Property="Background" Value="LightYellow"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel Background="LightSteelBlue">
        <Label Content="Kikelet Panzió" HorizontalAlignment="Center" Margin="50" FontSize="50" FontFamily="Vivaldi"></Label>
        <DockPanel HorizontalAlignment="Center">
            <Button Content="Szobák kezelése" Click="Button_Click"></Button>
            <Button Content="Regisztráció"></Button>
            <Button Content="Szobafoglalás"></Button>
            <Button Content="Statisztikák"></Button>
        </DockPanel>
    </StackPanel>
</Window>
